<%- include('../includes/head.ejs') %> 
	</head>
	<body>
		<%- include('../includes/nav.ejs') %> 

		<main class="d-flex flex-column align-items-center mx-5">
            <h1>Add Photo to Album</h1>
			<form class="album-form form-control" action="/admin/add-album" method="POST">
				<div class="row">
					<!-- title -->
					<div class="">
						<label class="col-2" for="title">Title</label>
						<input class="col-10" type="text" name="title" id="title" />
					</div>
					<!-- imageUrl -->
					<div class="">
						<label class="col-2" for="imageUrl">Image Url</label>
						<input class="col-10" type="text" name="imageUrl" id="imageUrl" />
					</div>
					<!-- category -->
					<div class="">
						<label class="col-2" for="category">Category</label>
						<input class="col-10" type="text" name="category" id="category">
					</div>
					<div class="">
						<label class="col-2" for="description">Description</label>
						<textarea class="col-10" name="description" id="description" rows="5"></textarea>
					</div>
				</div>
				<button type="submit">Add Album</button>
				<a href="/admin/admin-event-photos" class="btn bg-danger">Cancel</a>
			</form>
		</main>
		<%- include('../includes/end.ejs') %>